# Frontend Environment Configuration
# Copy this file to .env.local and configure with your actual values

# ==========================================
# API CONFIGURATION
# ==========================================

# Backend API URL
# For local development: http://localhost:5001/api
# For production: https://your-backend-domain.netlify.app/api
NEXT_PUBLIC_API_URL=http://localhost:5001/api

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application Environment
NODE_ENV=development

# Application URL (used for SEO and social sharing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Name
NEXT_PUBLIC_APP_NAME=Recipedium

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================

# Enable/disable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable/disable debug mode
NEXT_PUBLIC_DEBUG_MODE=true

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================

# Google Analytics Tracking ID (if using analytics)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN (if using error tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ==========================================
# PRODUCTION SETTINGS (Uncomment for production)
# ==========================================

# Use these settings for production deployment
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://your-backend-domain.netlify.app/api
# NEXT_PUBLIC_APP_URL=https://your-frontend-domain.vercel.app
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_DEBUG_MODE=false 